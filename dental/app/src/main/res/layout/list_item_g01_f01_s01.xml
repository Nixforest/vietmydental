<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_menu_margin_height"
        android:layout_marginLeft="@dimen/layout_menu_margin_horizontal"
        android:layout_marginRight="@dimen/layout_menu_margin_horizontal"
        android:layout_marginTop="@dimen/layout_menu_margin_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_menu_margin_height"
            android:src="@drawable/ic_menu_home" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_menu_size" />
            <TextView
                android:id="@+id/textDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Detail"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_menu_size" />
        </LinearLayout>
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textValue"
            android:layout_weight="0.1"
            android:gravity="center_vertical|end"
            android:padding="5dp"
            android:textColor="#FF000000"/>

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_menu_margin_height"
            android:layout_gravity="center_vertical|right"
            android:foregroundGravity="right"
            android:src="@drawable/ic_next"
            android:layout_alignParentRight="true" />
    </LinearLayout>

</LinearLayout>