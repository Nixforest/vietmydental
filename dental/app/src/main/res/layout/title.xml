<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_g00_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height"
        android:background="@color/colorMain"
        android:paddingLeft="@dimen/layout_margin_horizontal"
        android:paddingRight="@dimen/layout_margin_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/title_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingRight="@dimen/layout_margin_horizontal_large"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingTop="5dp"
                    android:background="@drawable/selector_btn_back"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_btn_sliding_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingRight="@dimen/layout_margin_horizontal_large">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_btn_sliding_menu" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_sub_title_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_activity_g00_home"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_sub_header_size"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_main_v3"
                android:visibility="invisible" />
            <LinearLayout
                android:id="@+id/btnFinish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/layout_margin_horizontal_large">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_btn_finish" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_subheader_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_sub_title_height"
        android:background="@color/main_color_2"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_sub_header_size"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>